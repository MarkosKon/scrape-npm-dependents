{
  "name": "scrape-npm-dependents",
  "description": "A script that sorts the dependents of a package by popularity.",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Mark",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "start:m": "nodemon src/index.js --ignore data",
    "lint": "eslint --ext js src",
    "format": "eslint --ext js --fix src",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test",
    "test:staged": "yarn test:ci --findRelatedTests --bail",
    "test:coverage": "yarn test:ci --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn test:staged",
      "eslint --fix",
      "git add"
    ],
    "*.{md,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "inquirer": "^7.0.0",
    "mkdirp": "^0.5.1",
    "node-fetch": "^2.6.0",
    "progress": "^2.0.3",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "react-scripts": "^3.1.1"
  }
}
