{
  "name": "scrape-npm-dependents",
  "description": "A script that sorts by weekly downloads the dependents of a package.",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.js",
  "author": "Mark",
  "license": "MIT",
  "bin": {
    "snd": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "start:m": "nodemon src/index.js --ignore data",
    "lint": "eslint --ext js src",
    "format": "eslint --ext js --fix src",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test",
    "test:staged": "yarn test:ci --findRelatedTests --bail",
    "test:coverage": "yarn test:ci --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "lodash.chunk": "^4.2.0",
    "lodash.difference": "^4.5.0",
    "lodash.orderby": "^4.6.0",
    "node-fetch": "^2.6.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/lodash.chunk": "^4.2.6",
    "@types/lodash.difference": "^4.5.6",
    "@types/lodash.orderby": "^4.6.6",
    "@types/node": "^16.7.10",
    "@types/node-fetch": "^2.5.12",
    "@types/yargs": "^17.0.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "react-scripts": "^4.0.0",
    "typescript": "^4.2.2"
  }
}
